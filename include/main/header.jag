<script>
$(document).ready(function(){
	$.ajax({
		type:"GET", 
		async : false,
		url: "/mdm/users/authenticate",
		error: function(d, textStatus){
			window.location = "login.jag?login_failed=true"; 
		},
		success: function(d, textStatus){
			var cat = d.split('|')[0];
			var user = d.split('|')[1];
			if(cat==1){
				//admin
				$('#mydevices a').attr('href', $('#mydevices a').attr('href')+user);
			}else{
				//user
				$('.inactivelink').hide();
			}
		}
	});
});
</script>
